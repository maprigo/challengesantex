#game_show
  display: flex
  flex: 1
  width: 100%
  height: 100vh
  flex-direction: row
  flex-wrap: wrap

  #main_section
    flex: 3
    display: flex
    flex-direction: column

  #game_header
    padding: $base-spacing * 1.5
    text-align: center

    h1
      margin-bottom: .5em

    p
      color: $light-purple
      font-size: 1.2em

  #boards_container
    flex: 3
    display: flex
    flex-direction: row
    flex-wrap: wrap
    overflow-y: auto
    height: 100%
    background: #fff
    padding-top: $base-spacing
    background: tint($light-gray, 70)

    .grid
      display: flex
      flex-direction: column
      margin-bottom: $base-spacing
      border-radius: $base-border-radius
      overflow: hidden

      &.pointer
        .cell:not(.header):hover
          cursor: pointer

      .row
        flex: 1
        display: flex
        min-height: 40px

        > .cell
          flex: 1
          border-color: $dark-gray
          border-style: solid
          border-width: 1px
          display: flex
          align-items: center
          justify-content: center
          border-radius: $base-border-radius
          overflow: hidden;

          &:not(.header)
            background: $light-blue

          &.ship
            background: $gray

          &.ship-hit, &.hit
            background-image: url('data:image/png;base64,')
            background-size: contain
            background-position: 50% 50%
            background-repeat: no-repeat

            &.ship-hit
              background-color: $gray

          &.water-hit
            background: $blue

          &:last-of-type
            border-right-width: 3px

          &:nth-child(2)
            border-left-width: 3px


          &.header
            border: 0px none

        &:nth-child(2)
          > .cell
            border-top-width: 3px

        &:last-of-type
          > .cell:not(.header)
            border-bottom-width: 3px

    #opponents_board_container
      flex: 1
      flex-direction: column
      padding: $small-spacing

      header
        text-align: center
        h2
          color: $dark-purple

      .grid.pointer
        .cell
          cursor: crosshair

      p
        text-align: right

    #my_board_container
      flex: 1
      flex-direction: column
      max-width: 50%
      padding: $small-spacing

      .grid.pointer
        .cell.cell.ship-shape
          background: $light-green
        .cell.ship-shape-invalid
          background: $light-red

      header
        text-align: center
        h2
          color: $dark-purple


    #ship_selector
      padding: $small-spacing
      text-align: center
      background: $light-gray
      margin-bottom: $base-spacing
      border-radius: $base-border-radius
      color: $dark-gray

      .orientation
        text-transform: uppercase
        font-weight: bold
        border-bottom: 1px dotted $purple
        color: $purple

      ul
        list-style: none
        padding: 0
        margin: 0

        li
          margin-bottom: $small-spacing
          width: auto
          cursor: pointer
          display: inline-block

          &:not(:last-of-type)
            margin-right: $small-spacing

          &.active
            .ship
              span
                background-color: rgba($green, .5)
                border: 1px solid $green


          .ship
            > span
              transition()
              display: inline-block
              width: 25px
              height: 25px
              background: tint($dark-gray, 20)
              border-radius: $base-border-radius
              border: 1px solid $dark-gray
              overflow: hidden

          &:not(.active)
            .ship:hover
              > span
                background: $dark-gray



  #chat_container
    background: $light-gray
    flex: 1
    display: flex
    flex-direction: column
    padding: $small-spacing
    display: flex
    border-left: 1px solid $gray

    .status
      display: inline-block
      width: 10px
      height: 10px
      vertical-align: middle
      background: $gray
      border-radius: 50%

      &.connected
        background: $green

    .messages-container
      background: #fff
      flex: 1
      border-radius: $base-border-radius
      display: flex
      padding: $base-spacing 0

      ul
        list-style: none
        padding: 0
        margin: 0
        overflow-y: scroll
        flex: 1

        li
          padding: 0 $small-spacing
          margin-bottom: ($small-spacing / 2)

          span
            display: inline-block
            background: rgba($light-blue, .5)
            border-radius: $base-border-radius
            padding: ($small-spacing / 2)
            max-width: 75%
            text-align: left

          &.mine
            text-align: right

            span
              background: rgba($light-green, .5)


    .form-container
      padding-top: $small-spacing

      textarea
        width: 100%

  .instructions
    background: $light-gray
    border-radius: $base-border-radius
    padding: $base-spacing
    color: $dark-gray

    li
      margin-left: $small-spacing
      margin-bottom: $small-spacing

    input
      cursor: pointer
      background: transparent
      padding: 0
      display: inline-block
      color: $purple
      width: 100%
      font-size: .8em

      &::selection
        background: $light-purple

  .error
    transition()
    background: rgba($red, .3)
    padding: $small-spacing
    border-radius: $base-border-radius
    text-align: center


#game_result
  flex: 3
  display: flex
  flex-direction: column
  flex-wrap: wrap
  text-align: center
  height: 100%
  align-items: center
  justify-content: center;

  header
    margin-bottom: $base-spacing

  h1
    font-size: 3em
    line-height: 1.3em
    color: $dark-purple

  p
    font-size: 1.5em
    line-height: 1.5em
    color: $light-purple
    margin-bottom: 1.5em

  .twitter-hashtag-button
    @extend .button
